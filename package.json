{
  "name": "portas-perfis",
  "version": "1.0.0",
  "description": "Aplicação para desenho e configuração de portas e perfis",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 3000",
    "dev": "npx http-server -p 3000 -c-1",
    "clean": "rm -rf node_modules",
    "clean:win": "if exist node_modules rmdir /s /q node_modules",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "portas",
    "perfis",
    "desenho",
    "svg",
    "configuração"
  ],
  "author": "Conecta Soluções",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@playwright/test": "^1.51.1",
    "@supabase/supabase-js": "^2.49.4",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.0",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "serve": "^14.2.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/tests/mocks/styleMock.js"
    },
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
